<Window x:Class="DRG.WpfLibrary.Demo.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DRG.WpfLibrary.Demo"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Title="" Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="Auto" x:Name="ColLeft"/>
            <!-- 原来的 3* 改为 Auto -->
            <ColumnDefinition Width="*"/>
            <!-- 右侧内容 -->
        </Grid.ColumnDefinitions>

        <!-- 左侧按钮列（保持不变） -->
        <Border Grid.Column="0" CornerRadius="0" Margin="1" VerticalAlignment="Stretch">
            <StackPanel Orientation="Vertical" VerticalAlignment="Stretch" HorizontalAlignment="Center">
                <Button Name="btnToggleListBox"
              Click="btnToggleListBox_Click"
              Width="40" Height="40" Margin="0,5,0,0">
                    <Image Source="/DRG.WpfLibrary.Demo;component/list.png"
               Width="32" Height="32" Stretch="Uniform"/>
                </Button>
            </StackPanel>
        </Border>

        <!-- 左侧列表容器：可动画的面板 -->
        <Border x:Name="LeftPanel"
          Grid.Column="1"
          Width="280"                         
          Panel.ZIndex="1"
          ClipToBounds="True">
            <ListBox Name="listBoxFolders"
             Margin="0"
             FontSize="30"
             SelectionChanged="listBoxFolders_SelectionChanged"/>
        </Border>

        <!-- WebView2：从第1列开始跨两列，始终在底层铺满可用空间 -->
        <wv2:WebView2 x:Name="webView2"
              Grid.Column="2"
              Margin="0"/>
    </Grid>




</Window>